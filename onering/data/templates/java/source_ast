
record Transformer {
    statements : list[Statement]
}

record Statement {
    is_temporary : boolean
    expression : Expression
    target : Variable
}

union Variable {
    FieldPath
    LocalVar
}

typeref LocalVar = string

record FieldPath {
    components : list[string]
}

union Expression {
    FunCall
    Literal
    FieldPath
}

record FunCall {
    func_name : FQN
    arguments : list[Expression]
}

union Literal {
    Number,
    string,
    boolean
}
