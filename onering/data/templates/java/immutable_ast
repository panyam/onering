
record Transformer {
    statements : list[Statement]
}

union Statement {
    VariableDeclaration
    ValueAssignment
    IfStatement
    ReturnStatement
}

record IfStatement {
    condition : Expr
    body : list[Statement]
    otherwise : list[Statement]
}

record VariableDeclaration {
    varname : string
    vartype : Type
    initial_value : Expr ?
}

record ValueAssignment {
    varname : string
    value : Expr
}

record ReturnStatement {
    retvalue : Expr
}

union Expr {
    FunCall
    Literal
    Variable
    Getter
    Constructor
}

record Constructor {
    datatype : Type
    arguments : list[Expr]
}

record FunCall {
    func_name : FQN
    arguments : list[Expr]
}

union Literal {
    Number,
    string,
    boolean
}

record Getter {
    source : Expr
    field_name : string
}
