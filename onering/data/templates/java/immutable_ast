
record Transformer {
    statements : list[Statement]
}

union Statement {
    VariableDeclaration
    ValueAssignment
    IfStatement
    ReturnStatement
}

record IfStatement {
    condition : Expression
    body : list[Statement]
    otherwise : list[Statement]
}

record VariableDeclaration {
    varname : string
    vartype : Type
    initial_value : Expression ?
}

record ValueAssignment {
    varname : string
    value : Expression
}

record ReturnStatement {
    retvalue : Expression
}

union Expression {
    FunCall
    Literal
    Variable
    Getter
    Constructor
}

record Constructor {
    datatype : Type
    arguments : list[Expression]
}

record FunCall {
    func_name : FQN
    arguments : list[Expression]
}

union Literal {
    Number,
    string,
    boolean
}

record Getter {
    source : Expression
    field_name : string
}
